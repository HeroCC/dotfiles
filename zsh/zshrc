export PATH="$HOME/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games:/usr/local/games:$PATH"

motd_mode='updates'
multiline_prompt='true'

source ~/.zsh/antigen/antigen.zsh
antigen use oh-my-zsh

antigen bundles <<EOBUNDLES
screen
command-not-found
colored-man
nvm

zsh-users/zsh-completions src
zsh-users/zsh-syntax-highlighting
tarruda/zsh-autosuggestions

rupa/z
EOBUNDLES
antigen theme $HOME/.zsh/custom bira-cust --no-local-clone
antigen apply

source ~/.zsh/history.zsh
source ~/.zsh/completions.zsh
source ~/.zsh/functions.zsh
source ~/.zsh/aliases.zsh
source ~/.zsh/bindkeys.zsh
source ~/.zsh/colors.zsh
source ~/.zsh/exports.zsh
source ~/.zsh/setopt.zsh
source ~/.zsh/motd.zsh

if [ -e "$HOME/.zsh/local.zsh" ]; then
  source ~/.zsh/local.zsh
fi
